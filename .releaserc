{
    "branches": [
         {"name": "main"},
         {"name": "dev", "channel": "dev", "prerelease": "devel"},
    ],
    "repositoryUrl": "https://github.com/CarloMicieli/trenako-web-api",
    "debug": "true",
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "conventionalcommits",
                "releaseRules": [
                    {"type": "build", "release": "no-release"},
                    {"type": "ci", "release": "no-release"},
                    {"type": "docs", "release": "no-release"},
                ]
            }
        ],
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md",
                "changelogTitle": "# Trenako Web Api Changelog"
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "./prepare-release.sh ${nextRelease.version}"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "./catalog/Cargo.toml",
                    "./collecting/Cargo.toml",
                    "./social/Cargo.toml",
                    "./webapi/Cargo.toml"
                ]
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": "release/**"
                    }
                ]
            }
        ]
    ]
}